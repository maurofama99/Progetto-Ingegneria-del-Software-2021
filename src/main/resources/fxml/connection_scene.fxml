<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import java.net.URL?>
<StackPane prefHeight="720.0" prefWidth="1280.0" styleClass="rootPane" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polimi.ingsw.view.gui.scenes.ConnectionSceneController">
   <children>
      <Group>
         <children>
            <AnchorPane prefHeight="600.0" prefWidth="800.0">
               <children>
                  <Button fx:id="connectButton" layoutX="300.0" layoutY="361.0" mnemonicParsing="false" prefHeight="100.0" prefWidth="200.0" styleClass="connectBtn" textFill="WHITE">
                     <font>
                        <Font name="Informal Roman" size="16.0" />
                     </font></Button>

                  <Button fx:id="exitButton" layoutX="300.0" layoutY="468.0" mnemonicParsing="false" prefHeight="100.0" prefWidth="200.0" styleClass="backToMenuBtn"  textFill="WHITE">
                     <font>
                        <Font name="Informal Roman" size="16.0" />
                     </font></Button>

                  <TextField fx:id="serverAddress" layoutX="247.0" layoutY="117.0" prefHeight="40.0" prefWidth="300.0" />
                  <TextField fx:id="serverPort" layoutX="250.0" layoutY="260.0" prefHeight="40.0" prefWidth="300.0" />
                  <ImageView fitHeight="100.0" fitWidth="271.0" layoutX="267.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../other/texts/server_ip.png" />
                     </image>
                  </ImageView>
                  <ImageView fitHeight="100.0" fitWidth="260.0" layoutX="267.0" layoutY="159.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../other/texts/port.png" />
                     </image>
                  </ImageView>
               </children>
            </AnchorPane>
         </children>
      </Group>
   </children>
   <stylesheets> <URL value="@../css/connection_scene.css"/> </stylesheets>
</StackPane>
